DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend
TIME_ZONE=Europe/Moscow

# ============================================
# DATABASE - POSTGRESQL
# ============================================
POSTGRES_DB=lms_db
POSTGRES_USER=lms_user
